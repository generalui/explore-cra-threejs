{
  "name": "explore-cra-threejs",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/generalui/explore-cra-threejs"
  },
  "private": true,
  "dependencies": {
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.0.1",
    "three": "^0.104.0",
    "three-orbit-controls": "^82.1.0"
  },
  "devDependencies": {
    "gl": "^4.2.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "yarn test --coverage --watchAll=false",
    "test:coverage:html": "yarn test --coverage --reporter='html' --watchAll=false && open coverage/lcov-report/index.html",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/__reference/**/*.{js,jsx}",
      "!src/index.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}